<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clouds"
    tools:context=".DetailPage">

    <LinearLayout
        android:id="@+id/trade_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/white_sec_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/buyLyt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/red_bg"
                android:gravity="center"
                android:text="BUY"
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/sellLyt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/white_bg"
                android:gravity="center"
                android:text="SELL"
                android:textColor="@color/colordarkgrey"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:weightSum="2">

            <TextView
                android:id="@+id/avblBal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:gravity="center"
                android:textColor="@color/colordarkgrey"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1.25"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_corners"
                    android:gravity="center"
                    android:text="10%"
                    android:textColor="@color/colordarkgrey"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_corners"
                    android:gravity="center"
                    android:text="25%"
                    android:textColor="@color/colordarkgrey"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_corners"
                    android:gravity="center"
                    android:text="50%"
                    android:textColor="@color/colordarkgrey"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/rounded_corners"
                    android:gravity="center"
                    android:text="100%"
                    android:textColor="@color/colordarkgrey"
                    android:textSize="12sp" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="0.75"
                android:gravity="start|center_vertical"
                android:text="Buy Amount(BTC):"
                android:textColor="@color/colordarkgrey"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/qty"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1.25"
                android:background="@drawable/round_corner_et"
                android:gravity="end"
                android:hint="0 BTC"
                android:padding="10dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:layout_weight="0.75"
                android:gravity="start|center_vertical"
                android:text="Price Per(INR):"
                android:textColor="@color/colordarkgrey"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/rate"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1.25"
                android:background="@drawable/round_corner_et"
                android:gravity="end"
                android:hint="0"
                android:padding="10dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/colorAccent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Fee:"
                android:textColor="@color/colordarkgrey"
                android:textSize="14sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:text="0 BTC"
                android:textColor="@color/colordarkgrey"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start"
                android:text="Order Total:"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:text="0 INR"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:weightSum="2">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="start"
                android:text="MIN ORDER AMOUNT: 1,000(INR)"
                android:textColor="@color/colordarkgrey"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Fees - Maker:0%, Taker:0.15%"
                android:textColor="@color/colordarkgrey"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:layout_weight="0.75"
                android:background="@color/clouds"
                android:text="RESET"
                android:textColor="@color/colordarkgrey"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btnOrder"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"
                android:layout_weight="1.25"
                android:background="@color/colorAccent"
                android:text="BUY"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/trade_lyt"
        android:layout_margin="8dp"
        android:background="@drawable/white_sec_background"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/stickyView"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginBottom="5dp"
            android:background="@color/colorNext"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:tag="sticky"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="start"
                android:paddingStart="16dp"
                android:paddingEnd="0dp"
                android:text="ORDER TYPE"
                android:textColor="@color/colordarkgrey"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:gravity="start"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:text="RATE"
                android:textColor="@color/colordarkgrey"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:gravity="start"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:text="QUANTITY"
                android:textColor="@color/colordarkgrey"
                android:textSize="12sp" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_orders"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:scrollbars="vertical" />

    </LinearLayout>

</RelativeLayout>